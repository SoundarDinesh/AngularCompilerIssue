{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "module": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ]
  },
  "files": [
      "public_api.ts",
    ],
  "angularCompilerOptions": {
      "strictMetadataEmit": true,
      "skipTemplateCodegen": true
    }
}
